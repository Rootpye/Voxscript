{
    "manifest_version": 3,
    "name": "Voxscript",
    "version": "1.0",
    "description": "Voxscript is an extension that helps you convert your speech to text.",
    "action": {
      "default_title": "Speech to Text",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "64": "icon.png",
        "128": "icon.png"
      }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "64": "icon.png",
        "128": "icon.png"
    },
    "permissions": [
      "activeTab",
      "microphone"
    ],
    "background": {
      "service_worker": "background.js"
    }
  }
  
